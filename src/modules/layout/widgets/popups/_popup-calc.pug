#calc.popup.uk-flex-top(data-uk-modal)
	.popup__body.uk-modal-dialog.uk-modal-body.uk-margin-auto-vertical
		button.popup__close.uk-modal-close-default(type="button" data-uk-close)
		img.img-m2(src=`${modulesIco}М2.svg` alt="")
		+picture(png, `${modules}popup-tel`, 'n', 'n')(class="form__img-tel")
		h3.popup__title!= lang[69]
		h3.popup__subtitle!= lang[70]
		form.form(action="#")
			.form__main
				.form__block.input-wrap
					input.form__input.input(type="text" name="Имя" placeholder=lang.urName)
				.form__block.input-wrap
					input.form__input.input(type="tel" name="Телефон" placeholder="Ваш телефон")
				button.form__submit.uk-button.btn-solid-muted(type="submit")= lang[2]
			.form__policy #[!= lang[50][0]]#[br]#[a.form__policy-link(href=privacyLink target="_blank")= lang[50][1]]